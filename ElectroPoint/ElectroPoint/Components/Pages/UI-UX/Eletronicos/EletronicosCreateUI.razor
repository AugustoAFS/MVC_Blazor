@page "/EletronicosCreateUI"

<h3>Criar Eletrônico</h3>

<EditForm Model="@novoEletronico" OnValidSubmit="SalvarEletronico" FormName="eletronicoForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="nome">Nome</label>
        <InputText id="nome" class="form-control" @bind-Value="novoEletronico.Nome" />
    </div>

    <div class="form-group">
        <label for="preco">Preço</label>
        <InputNumber id="preco" class="form-control" @bind-Value="novoEletronico.Preco" />
    </div>

    <div class="form-group">
        <label for="descricao">Descrição</label>
        <InputTextArea id="descricao" class="form-control" @bind-Value="novoEletronico.Descricao" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</EditForm>

@code {
    // Modelo de dados para o eletrônico
    private Eletronico novoEletronico = new Eletronico();

    // Método para salvar o eletrônico (pode ser uma chamada de serviço para persistir no banco de dados)
    private void SalvarEletronico()
    {
        // Aqui você pode adicionar a lógica para salvar o eletrônico
        // Exemplo: chamar um serviço para adicionar o eletrônico ao banco de dados
        Console.WriteLine($"Eletrônico {novoEletronico.Nome} salvo com sucesso!");
    }

    // Modelo de dados para um eletrônico
    public class Eletronico
    {
        public string Nome { get; set; }
        public decimal Preco { get; set; }
        public string Descricao { get; set; }
    }
}
